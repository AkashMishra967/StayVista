<style>
    .search-btn {
        background-color: #fe424d;
        color: white;
        border-radius: 25px;
        height: 35px;
        padding: 0 1rem;

        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;

        line-height: 1;
    }

    .search-btn i {
        font-size: 0.9rem;
        line-height: 1;
    }

    .search-btn:hover {
        background-color: #fe424d;
        color: white;
    }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom">
    <div class="container-fluid">
        <!-- Logo -->
        <a class="navbar-brand" href="/listings">
            <i class="fa-solid fa-compass"></i>
        </a>

        <!-- Toggler for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse position-relative" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="/listings">Explore</a>
            </div>

            <!-- Search form -->
            <form class="d-flex search-center align-items-center gap-2" role="search" action="/listings" method="GET">
                <div class="navbar-nav d-flex flex-row align-items-center gap-2">
                    <!-- Country dropdown -->
                    <select name="country" class="form-select search-input">
                        <option value="">Country</option>
                        <option value="India">India</option>
                        <option value="United Kingdom">United Kingdom</option>
                        <option value="Italy">Italy</option>
                        <option value="Mexico">Mexico</option>
                        <option value="Tanzania">Tanzania</option>
                        <option value="Netherlands">Netherlands</option>
                        <option value="Switzerland">Switzerland</option>
                        <option value="United States">United States</option>
                    </select>

                    <!-- City input -->
                    <input class="form-control search-input" type="search" name="city" placeholder="City" />

                    <button class="btn search-btn" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i> Search
                    </button>
                </div>
            </form>
        </div>

        <!-- Right side nav -->
        <div class="navbar-nav ms-auto">
            <a class="nav-link" href="/listings/new">Airbnb your home</a>

            <% if (!currUser) { %>
                <a class="nav-link" href="/signup"><b>Sign up</b></a>
                <a class="nav-link" href="/login"><b>Log in</b></a>
                <% } else { %>
                    <a class="nav-link" href="/logout">Log out</a>
                    <% } %>
        </div>
    </div>
</nav>
