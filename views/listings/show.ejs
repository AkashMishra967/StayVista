<% layout("/layouts/boilerplate")%>

    <body>
        <div class="row mt-3 ">
            <div class="col-8 offset-3">
                <h2>Listing Details</h2>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%=listing.image.url || 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=60'%>" class="card-img-top show-img" alt="listing image">
                <div class="card-body">
                    <p class="card-text"><b>
                            <%=listing.title%>
                        </b><br>
                        <%=listing.description%><br>
                            &#8377;<%=listing.price.toLocaleString("en-IN")%></li><br>
                                <%=listing.location%>
                                    </li><br>
                                    <%=listing.country%>
                    </p>
                </div>
            </div>
        
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>

            <form method="post" action="/listings/<%=listing._id%>?_method=delete">
                <button class="btn btn-dark offset-4">Delete</button>
                <br>
            </form>
        </div>
        </div>
    </body>