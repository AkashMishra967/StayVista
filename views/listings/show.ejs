<% layout("/layouts/boilerplate")%>
    <div class="row mt-3 ">
        <div class="col-8 offset-3">
            <h2>
                <%=listing.title%>
            </h2>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%=listing.image.url || 'https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=800&q=60'%>"
                class="card-img-top show-img" alt="listing image">
            <div class="card-body">
                <p class="card-text">
                    Owned by
                    <i>
                        <%= listing.owner ? listing.owner.username : "Deleted User" %>
                    </i>
                </p>
                <p class="card-text">
                    <%=listing.description%><br>
                </p>
                <p class="card-text">&#8377;<%=listing.price.toLocaleString("en-IN")%></li><br></p>
                <p class="card-text">
                    <%=listing.location%>
                </p>
                <p class="card-text">
                    <%=listing.country%>
                </p>
            </div>
        </div>


 <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
            <div class="btns">
                <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit </a>
                <form method="post" action="/listings/<%=listing._id%>?_method=delete">
                    <button class="btn btn-dark offset-4">Delete</button>
                    <br>
                </form>
            </div>
        <% } %>

                <div class="col-8 offset-3 mb-3">
                    
                    <%if(currUser) {%>
                        <hr>
                        <h4>Leave a Review</h4>
                          <label for="rating" class="form-label">Rating</label>
                        <form method="post" action="/listings/<%=listing._id%>/reviews" novalidate
                            class="needs-validation">
                            <!-- <div class="mb-3 mt-3">
                                <label for="rating" class="form-label">Rating</label>
                                <input type="range" min="1" max="5" value="1" id="rating" name="review[rating]"
                                    class="form-range">
                            </div> -->
                            <!-- star rating -->
                            <fieldset class="starability-slot">
                                <!-- <legend>First rating:</legend> -->
                                <input type="radio" id="first-rate0" name="review[rating]" value="1" checked hidden />

                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                            <div class="mb-3 mt-3">
                                <label for="comment" class="form-label">Comments</label>
                                <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please add some comments for review</div>
                            </div>
                            <button class="btn btn-outline-dark">Submit</button>
                        </form>
                        <%}%>

                            
                           
                            <% if(listing.reviews.length > 0) {%>
                            <div class="row">
                                <p><h4>All Reviews</h4></p>
                                <% for(review of listing.reviews){ %>
                                    <div class="card col-5 ms-3 mb-3">
                                        <div class="card-body">
                                            <h5 class="card-title">@<%= review.author ? review.author.username: "Deleted User" %></h5>
                                            <p class="starability-result card-text"data-rating="<%=review.rating %>"></p>
                                            <p class="card-text"><%=review.comment%></p>
                                        <form class="mb-3" method="post"
                                            action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=delete">
                                            <button class="btn btn-sm btn-dark">Delete</button>
                                        </form>
                                    </div>
                                    </div>
                                    <% } %>

                            </div>
                            <% } %>
                            <!-- ‚úÖ MAP REVIEWS KE BAAD -->
                </div>
 <div class="row justify-content-center map-section">
  <div class="col-lg-10">

    <div class="map-title">üìç Location on Map</div>
    <div class="map-subtitle">
      Exact location provided by the host
    </div>

    <% if (listing.geometry && listing.geometry.coordinates) { %>
      <div class="map-card">
        <div id="map"></div>
      </div>

      <script>
        window.listing = <%- JSON.stringify(listing) %>;
      </script>
      <script src="/js/map.js"></script>
    <% } %>

  </div>
</div>


